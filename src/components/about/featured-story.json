{
  "collectionName": "components_about_featured_stories",
  "info": {
    "displayName": "Featured story",
    "icon": "newspaper",
    "description": "Highlight a lead article"
  },
  "options": {},
  "attributes": {
    "tag": {
      "type": "string"
    },
    "title": {
      "type": "string",
      "required": false
    },
    "excerpt": {
      "type": "text"
    },
    "publishDate": {
      "type": "date"
    },
    "ctaLabel": {
      "type": "string",
      "default": "Read"
    },
    "ctaUrl": {
      "type": "string"
    },
    "cover": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": [
        "images"
      ]
    },
    "article": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "api::article.article"
    }
  }
}
