{
  "kind": "collectionType",
  "collectionName": "products",
  "info": {
    "singularName": "product",
    "pluralName": "products",
    "displayName": "Product"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string"
    },
    "slug": {
      "type": "string"
    },
    "badge": {
      "type": "string"
    },
    "productDiscountActive": {
      "type": "boolean"
    },
    "gallery": {
      "type": "media",
      "multiple": true,
      "allowedTypes": [
        "images",
        "files",
        "videos",
        "audios"
      ]
    },
    "productCategory": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "api::category.category"
    },
    "rating": {
      "type": "decimal"
    },
    "reviewsCount": {
      "type": "integer"
    },
    "limitedEdition": {
      "type": "boolean"
    },
    "bestSellers": {
      "type": "boolean"
    },
    "inStock": {
      "type": "boolean"
    },
    "sizeType": {
      "type": "component",
      "component": "shared.size-list",
      "repeatable": true
    },
    "description": {
      "type": "richtext"
    },
    "productList": {
      "type": "component",
      "component": "shared.item-list",
      "repeatable": true
    },
    "items": {
      "type": "component",
      "component": "our-products.what-on-component",
      "repeatable": true
    }
  }
}
