{
  "kind": "collectionType",
  "collectionName": "catalog_products",
  "info": {
    "singularName": "catalog-product",
    "pluralName": "catalog-products",
    "displayName": "CatalogProduct"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string"
    },
    "slug": {
      "type": "string"
    },
    "productType": {
      "type": "enumeration",
      "enum": [
        "single",
        "bundle"
      ]
    },
    "description": {
      "type": "richtext"
    },
    "images": {
      "type": "media",
      "multiple": true,
      "allowedTypes": [
        "images",
        "files",
        "videos",
        "audios"
      ]
    },
    "isActive": {
      "type": "boolean"
    },
    "variants": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::product-variant.product-variant",
      "mappedBy": "product"
    },
    "bundle": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "api::bundle.bundle",
      "mappedBy": "product"
    },
    "items": {
      "type": "component",
      "component": "our-products.what-on-component",
      "repeatable": true
    },
    "productList": {
      "type": "component",
      "component": "shared.item-list",
      "repeatable": true
    },
    "limitedEdition": {
      "type": "boolean"
    },
    "bestSellers": {
      "type": "boolean"
    }
  }
}
